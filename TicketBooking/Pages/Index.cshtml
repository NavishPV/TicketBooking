@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<form method="post">
    <style >
    body{
        background-image:url('ddd.png');
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-size:cover;
    }

</style>
        

    <div class="text-center">
        <h1>Welcome to SRS-Travels</h1>
        </div>


@if (User.Identity.IsAuthenticated)
    {

        <h4>@Model.ErrorMessage</h4>

        @if (User.IsInRole("Admin"))
        {




            <div class="row">
                <div class="col-md-4 col-xl-4">
                    <div class="card bg-c-blue db-card">
                        <div class="card-block">
                            <h6 class="m-b-20">Customers</h6>
                            <h2 class="text-end"><i class="fa fa-person float-start"></i><span>@Model.Dashboard.CustomerCount</span></h2>
                            <p class="m-b-0">Active <span class="f-right"></span></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-xl-4">
                    <div class="card bg-c-green db-card">
                        <div class="card-block">
                            <h6 class="m-b-20">Buses</h6>
                            <h2 class="text-end"><i class="fa fa-building float-start"></i><span>@Model.Dashboard.BusCount</span></h2>
                            <p class="m-b-0">Active <span class="float-end"></span></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-xl-4">
                    <div class="card bg-c-pink db-card">
                        <div class="card-block">
                            <h6 class="m-b-20">Booking Tickets</h6>
                            <h2 class="text-end"><i class="fa fa-graduation-cap float-start"></i><span>@Model.Dashboard.TicketsCount</span></h2>
                            <p class="m-b-0">Completed <span class="float-end">@Model.Dashboard.TicketsCount</span></p>
                        </div>
                    </div>
                </div>
            </div>
            }
        }
        

        else
        {
            <div class="text-center">
            <h4 >Please click here to <a href="/Login">
                    <i class="fa fa-sign-in"></i>  Login</a> </h4>
                    
                 

                            </div>
        }

    
    </div>
</form>