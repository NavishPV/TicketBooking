@page 
@model TicketBooking.Pages.Customers.AddModel
@{
}
<h3 class="text-center">  Add New </h3>
<form method="post" class="container shadow p-20 h-50 w-50 " >
    <div class="form-group">
        <label asp-for="@Model.FirstName"> </label>
        <input asp-for="@Model.FirstName" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName"> </label>
        <input asp-for="@Model.LastName" class="form-control" />
        <br />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email">  </label>
        <input asp-for="@Model.Email" class="form-control" />
        <br />
    </div>

     <div class="form-group">
        <label asp-for="@Model.Mobile"> </label>
        <input asp-for="@Model.Mobile" class="form-control" />
        <br />
    </div>

    <div class="form-group">
        <label asp-for="@Model.City"> </label>
        <input asp-for="@Model.City" class="form-control" />
        <br />
    </div>

     <div class="form-group">
        <label asp-for="@Model.State"> </label>
        <input asp-for="@Model.State" class="form-control" />
        <br />
    </div>

     <div class="form-group">
        <label asp-for="@Model.Password"> </label>
        <input asp-for="@Model.Password" class="form-control" />
        <br />
    </div>

    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
         <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div>
        <button type="submit" class="btn btn-success">SAVE</button>
        <a href="/Customers/List" class="btn btn-light" role="button">Cancel</a>
    </div>
</form>
</div>