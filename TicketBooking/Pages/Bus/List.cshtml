@page
@model TicketBooking.Pages.Bus.ListModel
@{
}
<form method="post">
    <div class = "form-group">
    <div class="row"> 
            <div class="col"><h3>Bus</h3></div>
            <div class="col">
                <a href="/Bus/Add" class="btn btn-success" role="button">Add</a>
            </div>
        </div>
        <br />
    
          
    <div>
        <h6 class="text-success">@Model.SuccessMessage </h6>
        <h6 class="text-danger">@Model.ErrorMessage </h6>
    </div>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">CategoryId</th>
                <th scope="col">DriverName</th>
                <th scope="col">V_Number</th>
                   <th scope="col">StartLocation</th>
                   <th scope="col">EndLocation</th>
                    <th scope="col">Cost</th>

                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
             @if(Model.BusList == null || Model.BusList.Count <=0)
                {
                    <tr>
                       <td>"error.no.data found!!"</td>
                </tr>
            }

            else
            {
           
            @foreach (var d in @Model.BusList)
            {
                <tr>
                    <td>@d.Id</td>
                    <td>@d.CategoryId</td>
                        <td>@d.DriverName</td>
                            <td>@d.V_Number-</td>
                                <td>@d.StartLocation</td>
                                    <td>@d.EndLocation</td>
                                        <td>@d.Cost</td>
                                    

                                        <td>
                        <a href="/Bus/Edit/@d.Id" class="btn btn-warning" role="button">
                            <i class="fa-solid fa-pen-to-square"></i></a>
                        
                    </td>
                </tr>
            }
            }
        </tbody>
    </table>

</form>