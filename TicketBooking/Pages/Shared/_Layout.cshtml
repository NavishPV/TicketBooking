<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketBooking.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
</head>
<body>
   
        <header>

              @if (Context.User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-black bg-black border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">TicketBooking</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                             <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                                </li>
                             @if (Context.User.Identity.IsAuthenticated && User.IsInRole("User"))
                            {
                                
                              <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Tickets/List">Tickets</a>
                            </li>

                                <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Index" asp-route-action="logout">Logout</a>
                            </li>
                            }

                             @if (Context.User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                             {
                                  <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Customers/List">Customers</a>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Bus/List">Bus</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/ABus/List">BookingTickets</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Index" asp-route-action="logout">Logout</a>
                            </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            }
            </header>

        
    
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TicketBooking - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>